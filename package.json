{
  "name": "micro-frontend-experiments",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "_clean:container-app": "cd packages/container-app && npm run clean",
    "_clean:micro-app": "cd packages/micro-app && npm run clean",
    "_clean:micro-components": "cd packages/micro-components && npm run clean",
    "clean": "run-p _clean:*",
    "_start:container-app": "cd packages/container-app && npm start",
    "_start:micro-app": "cd packages/micro-app && npm start",
    "_start:open": "sleep 3 && open https://localhost:8080/container/",
    "_start:proxy": "cd packages/proxy && npm start",
    "start": "run-p _start:*",
    "_symlink:container-app": "cd packages/container-app/src/components && ln -sf ../../../micro-components/src micro-components-src",
    "_symlink:micro-app": "cd packages/micro-app/src && ln -sf ../../micro-components/src micro-components",
    "symlinks": "run-p _symlink:*"
  },
