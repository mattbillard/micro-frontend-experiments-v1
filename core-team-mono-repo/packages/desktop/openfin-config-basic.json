{
  "runtime": {
    "arguments": "--v=1 --inspect",
    "version": "stable"
  },
  "shortcut": {
    "company": "OpenFin",
    "description": "OpenFin Platforms Prototype",
    "name": "OpenFin Platforms Prototype"
  },
  "platform": {
    "uuid": "example_platform",
    "autoShow": true,
    "defaultWindowOptions": {
      "contextMenu": true,
      "defaultCentered": true,
      "accelerator": {
          "devtools": true,
          "reload": true, 
          "reloadIgnoringCache": true, 
          "zoom": true
      }
    }
  },
  "snapshot": {
    "windows": [
      {
        "layout": {
          "settings": {
            "hasHeaders": true
          },
          "content": [
            {
              "type": "stack",
              "content": [
                {
                  "type": "component",
                  "componentName": "view",
                  "componentState": {
                    "url": "http://localhost:8080",
                    "NOTES": {
                      "pros": [
                        "Follows standard/recommended OpenFin",
                        "Can use OpenFin GoldenLayout if you want, or hide it by setting hasHeaders:false above"
                      ],
                      "cons": [
                        "window.reload() closes window",
                        "Couldn't find any settings that make right-click work - but key commands work to reload and show debuggger"
                      ],
                      "miscellanous": [
                        "Config simplied from: https://developers.openfin.co/docs/platform-getting-started > 'JSON example'",
                        "You have to provide your own top bar"
                      ]
                    }
                  }
                }
              ]
            }
          ]
        }
      }
    ]
  }
}