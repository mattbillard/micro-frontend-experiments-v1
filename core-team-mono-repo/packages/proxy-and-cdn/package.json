{
  "name": "@compaony/core-team-proxy-and-cdn",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "scripts": {
    "_format:prettier": "prettier --write './src/**/*.{json,js,jsx,ts,tsx,css,less,scss}'",
    "_format:stylelint": "stylelint --fix './src/**/*.{css,less,scss}'",
    "_link:app-and-nav-definitions": "cd dist/cdn && ln -sf ../../src/app-and-nav-definitions app-and-nav-definitions",
    "_link:container-project": "cd dist/cdn && ln -sf ../../node_modules/@company/core-team-container-project/dist/container-components container-components",
    "_link:cra-project": "cd dist/cdn && ln -sf ../../node_modules/@company/micro-team-cra-project/dist/cra-components cra-components",
    "_link:micro-project": "cd dist/cdn && ln -sf ../../node_modules/@company/micro-team-micro-project/dist/micro-components micro-components",
    "clean": "rm -rf dist/*",
    "link": "mkdir -p dist/cdn && run-p _link:*",
    "format": "run-s _format:*",
    "postinstall": "npm run clean && npm run link",
    "start": "pm2 start ./node_modules/webpack-dev-server/bin/webpack-dev-server.js --no-daemon -- --env.NODE_ENV=development"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@company/core-team-container-project": "file:../../../core-team-mono-repo/packages/container-project",
    "@company/micro-team-cra-project": "file:../../../micro-team-mono-repo/packages/cra-project",
    "@company/micro-team-micro-project": "file:../../../micro-team-mono-repo/packages/micro-project"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "pm2": "4.5.2",
    "prettier": "2.2.1",
    "stylelint": "^13.12.0",
    "stylelint-config-standard": "^21.0.0",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  }
}
