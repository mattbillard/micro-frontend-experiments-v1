{
  "name": "proxy-and-cdn",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "scripts": {
    "_link:cra-app": "cd dist && ln -sf ../node_modules/cra-app/dist cra-components",
    "_link:container-app": "cd dist && ln -sf ../node_modules/container-app/dist container",
    "_link:micro-app": "cd dist && ln -sf ../node_modules/micro-app/dist micro-components",
    "clean": "rm -rf dist/*",
    "link": "mkdir -p dist && run-p _link:*",
    "postinstall": "npm run clean && npm run link",
    "start": "pm2 start ./node_modules/webpack-dev-server/bin/webpack-dev-server.js --no-daemon --watch -- --env.NODE_ENV=development",
    "serve": "pm2 start ./node_modules/webpack-dev-server/bin/webpack-dev-server.js --no-daemon --watch -- --env.NODE_ENV=development"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cra-app": "file:../cra-app",
    "container-app": "file:../container-app",
    "micro-app": "file:../micro-app"
  },
  "devDependencies": {
    "chalk": "^4.1.0",
    "npm-run-all": "^4.1.5",
    "pm2": "4.5.2",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  }
}
